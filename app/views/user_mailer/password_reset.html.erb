  <body>
    <div class="emailContainer" style="max-width:600px; margin:50px auto;">
      <div class="emailHeader" style="background-size: 619px 792px !important;background-image: url('https://pepsidrc.sgp1.digitaloceanspaces.com/Layer%201225-min.png');border-top-right-radius: 40px;border-top-left-radius: 40px !important;">
        <img src="https://pepsidrc.sgp1.digitaloceanspaces.com/pepsiLogo%20%281%29.png" style="display: block; margin:auto; position: relative; bottom:30px;" height="160"width="150" />
      </div>
      <div class="emailContent" style="padding:10px 30px;box-shadow:0px 10px 10px #7b7b7b40;">
        <h1 style="text-align: center;font-size: 42px;font-weight: bold;margin-bottom: -15px;color: rgb(0, 105, 170);font-family:'helvetica', Arial, sans-serif;">
             RESET TO REFRESH
        </h1>
        <div class="emailContent" style="margin-top:30px;">
          <p style="text-align:center;font-size: 18px;line-height:1.7em;margin:10px 0;font-weight: 10;"> Dear <%= @user.first_name %>,</p>
          <p style="text-align:center;font-size: 16px;line-height: 1.7em;font-weight: 10;margin:10px 0;">
            To reset your password for pepsi DRC Home delivery for user name <%= @user.first_name %>, please check the following link. If the link doesn't work, copy and paste it into your browser.
          </p>

          <a href="<%= ENV['FRONTEND_HOST'] + '/auth/reset-password?token=' +  @reset_token + '&email=' + @user.email %>" style="display:block;text-align:center;font-size:20px;text-decoration: none;margin-bottom:40px;font-size:18px;color:rgb(53, 186, 237);font-family:'helvetica', Arial, sans-serif;"><%=  ENV['FRONTEND_HOST'] + '/auth/reset-password?token=' +  @reset_token + '&email=' + @user.email %></a>

        </div>

        <div style="margin:30px 0; text-align:center">
            <a href="#"
            style="text-decoration:none;font-weight:bold;color:rgb(0, 105, 170);padding:5px 10px;">HOME</a>
            <a href="#"
            style="text-decoration:none;font-weight:bold;color:rgb(0, 105, 170);padding:5px 10px;">SHOP</a>
            <a href="#"
            style="text-decoration:none;font-weight:bold;color:rgb(0, 105, 170);padding:5px 10px;">ABOUT US</a>
            <a href="#"
            style="text-decoration:none;font-weight:bold;color:rgb(0, 105, 170);padding:5px 10px;">HELP</a>
        </div>

      </div>
      <div class="emailFooter" style="background-repeat: no-repeat;height: 100px;background-size: 618px 110px !important;border-bottom-right-radius:40px;border-bottom-left-radius:40px;background-image: url('https://pepsidrc.sgp1.digitaloceanspaces.com/footer.png');">
      </div>
  </body>
